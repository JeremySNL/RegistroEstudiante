@page "/Asignatura/Edit/{AsignaturaId:int}"

@inject AsignaturasService asignaturasService
@inject NavigationManager navigationManager
@inject ToastService toastService

@*HTML*@
<PageTitle>Modificar</PageTitle>
<EditForm Model="Asignatura" OnValidSubmit="Modificar" FormName="editarAsignatura">
    <DataAnnotationsValidator />
    <div class="container">
        <div class="card shadow-lg">
            <div class="card-header text-center">
                <h5 class="card-title">Modificar Asignatura</h5>
            </div>

            <div class="card-body">
                @*Input Hidden*@
                <input type="hidden" name="Asignatura.AsignaturaId" value="@Asignatura.AsignaturaId" />
                
                @*Codigo*@
                <div class="mb-3">
                    <label class="form-label"><strong>Código</strong></label>
                    <InputText class="form-control" @bind-Value="Asignatura.Codigo"></InputText>
                    <ValidationMessage For="(() => Asignatura.Codigo)" />
                </div>
                
                @*Nombre*@
                <div class="mb-3">
                    <label class="form-label"><strong>Nombre</strong></label>
                    <InputText class="form-control" @bind-Value="Asignatura.Nombre"></InputText>
                    <ValidationMessage For="(() => Asignatura.Nombre)" />

                    @if (!string.IsNullOrEmpty(ErrorNombreDuplicado))
                    {
                        <div class="text-danger validation-message">@ErrorNombreDuplicado</div>
                    }
                </div>

                @*Aula*@
                <div class="mb-3">
                    <label class="form-label"><strong>Aula</strong></label>
                    <InputText class="form-control" @bind-Value="Asignatura.Aula"></InputText>
                    <ValidationMessage For="(() => Asignatura.Aula)" />
                </div>

                @*Creditos*@
                <div class="mb-3">
                    <label class="form-label"><strong>Créditos</strong></label>
                    <InputNumber class="form-control" @bind-Value="Asignatura.Creditos"></InputNumber>
                    <ValidationMessage For="(() => Asignatura.Creditos)" />
                </div>
            </div>

            @*footer*@
            <div class="card-footer text-center mt-2">
                <a href="/Asignatura/Index" class="btn btn-secondary">
                    <span class="bi bi-arrow-left"></span> Volver
                </a>
                <button type="button" class="btn btn-primary bi bi-floppy" @onclick="MostrarModalModificar"> Modificar</button>
                <button type="button" class="btn btn-danger bi bi-trash" @onclick="MostrarModalEliminar"> Eliminar</button>
            </div>
        </div>
    </div>

    <Modal @ref="ModalEliminar" IsVerticallyCentered="true" UseStaticBackdrop="true" Title="Eliminar asignatura">
        <BodyTemplate>
            ¿Estas seguro de eliminar esta asignatura?
        </BodyTemplate>
        <FooterTemplate>
            <div class="align-items-center">
                <button type="button" class="btn btn-secondary" @onclick="EsconderModalEliminar">Cerrar</button>
                <button type="button" class="btn btn-primary" @onclick="Eliminar">Estoy seguro</button>
            </div>

        </FooterTemplate>
    </Modal>

    <Modal @ref="ModalModificar" IsVerticallyCentered="true" UseStaticBackdrop="true" Title="Modificar asignatura">
        <BodyTemplate>
            ¿Estas seguro de modificar esta asignatura?
        </BodyTemplate>
        <FooterTemplate>
            <div class="align-items-center">
                <button type="button" class="btn btn-secondary" @onclick="EsconderModalModificar">Cerrar</button>
                <button type="submit" class="btn btn-primary">Estoy seguro</button>
            </div>
        </FooterTemplate>
    </Modal>
</EditForm>

@code {
    [SupplyParameterFromForm]
    public Asignaturas Asignatura { get; set; } = new Asignaturas();

    [Parameter]
    public int AsignaturaId { get; set; }
    public string Mensaje { get; set; } = string.Empty;
    public string ErrorNombreDuplicado = string.Empty;
    public Modal ModalEliminar = default!;
    public Modal ModalModificar = default!;

    protected override async Task OnInitializedAsync()
    {
        if (Asignatura == null || Asignatura.AsignaturaId == 0)
        {
            Asignatura = await asignaturasService.Buscar(AsignaturaId);
        }
    }

    private async Task MostrarModalModificar()
    {
        await ModalModificar.ShowAsync();
    }

    private async Task EsconderModalModificar()
    {
        await ModalModificar.HideAsync();
    }

    public async Task Modificar()
    {
        bool existeNombres = await asignaturasService.Existe(AsignaturaId, Asignatura.Nombre);

        if (existeNombres)
        {
            Console.WriteLine("\nEste nombre ya existe en el sistema: " + Asignatura.Nombre + "\n");
            ErrorNombreDuplicado = "El nombre \"" + Asignatura.Nombre + "\" ya está en uso.";
            return;
        }
        else
        {
            Console.WriteLine("\nEste nombre valido: " + Asignatura.Nombre + "\n");
            ErrorNombreDuplicado = string.Empty;
        }

        var creado = await asignaturasService.Guardar(Asignatura);

        if (creado)
        {
            await EsconderModalModificar();
            toastService.ShowSuccess("Asignatura modificada exitosamente");
            navigationManager.NavigateTo("/Asignatura/Index");
        }
        else
        {
            toastService.ShowError("Ha ocurrido un error inesperado, vuelva intentarlo más tarde.");
        }
    }

    private async Task MostrarModalEliminar()
    {
        await ModalEliminar.ShowAsync();
    }

    private async Task EsconderModalEliminar()
    {
        await ModalEliminar.HideAsync();
    }

    private async Task Eliminar()
    {
        var eliminado = await asignaturasService.Eliminar(Asignatura.AsignaturaId);

        if (eliminado)
        {
            await EsconderModalEliminar();
            toastService.ShowSuccess("Se ha eliminado correctamente");
            navigationManager.NavigateTo("/Asignatura/Index");
        }
        else
        {
            toastService.ShowError("Ha ocurrido un error inesperado, vuelva intentarlo más tarde.");
        }
    }
}