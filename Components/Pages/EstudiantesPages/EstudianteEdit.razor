@page "/Estudiante/Edit/{EstudianteId:int}"

@inject EstudiantesService EstudiantesService
@inject NavigationManager navigationManager
@inject ToastService toastService

<PageTitle>Modificar</PageTitle>
<EditForm Model="Estudiante" OnValidSubmit="Modificar" FormName="editarEstudiante">
    <DataAnnotationsValidator />
    <div class="container">
        <div class="card shadow-lg">
            <div class="card-header text-center">
                <h5 class="card-title">Modificar Estudiante</h5>
            </div>

            <div class="card-body">
                @*Input Hidden*@
                <input type="hidden" name="Estudiante.EstudianteId" value="@Estudiante.EstudianteId" />
                @*Nombres*@
                <div class="mb-3">
                    <label class="form-label"><strong>Nombres</strong></label>
                    <InputText class="form-control" @bind-Value="Estudiante.Nombres"></InputText>
                    <ValidationMessage For="(() => Estudiante.Nombres)" />
                    @*Nombre duplicado error*@
                    @if (!string.IsNullOrEmpty(ErrorNombreDuplicado))
                    {
                        <div class="text-danger validation-message">@ErrorNombreDuplicado</div>
                    }
                </div>
                @*Email*@
                <div class="mb-3">
                    <label class="form-label"><strong>Email</strong></label>
                    <InputText class="form-control" @bind-Value="Estudiante.Email"></InputText>
                    <ValidationMessage For="(() => Estudiante.Email)" />
                </div>
                @*Edad*@
                <div class="mb-3">
                    <label class="form-label"><strong>Edad</strong></label>
                    <InputNumber class="form-control" @bind-Value="Estudiante.Edad"></InputNumber>
                    <ValidationMessage For="(() => Estudiante.Edad)" />
                </div>
            </div>

            @*footer*@
            <div class="card-footer text-center mt-2">
                <a href="/Estudiante/Index" class="btn btn-secondary">
                    <span class="bi bi-arrow-left"></span> Volver
                </a>
                <button type="button" class="btn btn-primary bi bi-floppy" @onclick="MostrarModalModificar">Modificar</button>
                <button type="button" class="btn btn-danger bi bi-trash" @onclick="MostrarModalEliminar"> Eliminar</button>
            </div>
        </div>
    </div>

    <Modal @ref="ModalEliminar" IsVerticallyCentered="true" UseStaticBackdrop="true" Title="Eliminar estudiante">
        <BodyTemplate>
            ¿Estas seguro de eliminar este estudiante?
        </BodyTemplate>
        <FooterTemplate>
            <div class="align-items-center">
                <button type="button" class="btn btn-secondary" @onclick="EsconderModalEliminar">Cerrar</button>
                <button type="button" class="btn btn-primary" @onclick="Eliminar">Estoy seguro</button>
            </div>
            
        </FooterTemplate>
    </Modal>

    <Modal @ref="ModalModificar" IsVerticallyCentered="true" UseStaticBackdrop="true" Title="Modificar estudiante">
        <BodyTemplate>
            ¿Estas seguro de modificar este estudiante?
        </BodyTemplate>
        <FooterTemplate>
            <div class="align-items-center">
                <button type="button" class="btn btn-secondary" @onclick="EsconderModalModificar">Cerrar</button>
                <button type="submit" class="btn btn-primary">Estoy seguro</button>
            </div>
        </FooterTemplate>
    </Modal>
</EditForm>

@code {
    public Estudiantes Estudiante { get; set; } = new Estudiantes();

    [Parameter]
    public int EstudianteId { get; set; }
    public string Mensaje { get; set; } = string.Empty;
    public string ErrorNombreDuplicado = string.Empty;
    public Modal ModalEliminar = default!;
    public Modal ModalModificar = default!;

    protected override async Task OnInitializedAsync()
    {
        if (Estudiante == null || Estudiante.EstudianteId == 0)
        {
            Estudiante = await EstudiantesService.Buscar(EstudianteId);
        }
    }

    private async Task MostrarModalModificar()
    {
        await ModalModificar.ShowAsync();
    }

    private async Task EsconderModalModificar()
    {
        await ModalModificar.HideAsync();
    }

    public async Task Modificar()
    {
        bool existeNombres = await EstudiantesService.ExisteNombres(Estudiante.Nombres, EstudianteId);

        if (existeNombres)
        {
            ErrorNombreDuplicado = "El nombre \"" + Estudiante.Nombres + "\" ya está en uso.";
            return;
        }
        else
        {
            ErrorNombreDuplicado = string.Empty;
        }

        var creado = await EstudiantesService.Guardar(Estudiante);

        if (creado)
        {
            await EsconderModalModificar();
            toastService.ShowSuccess("Estudiante modificado exitosamente");
            navigationManager.NavigateTo("/Estudiante/Index");
        }
        else
        {
            toastService.ShowError("Ha ocurrido un error inesperado, vuelva intentarlo más tarde.");
        }
    }

    private async Task MostrarModalEliminar()
    {
        await ModalEliminar.ShowAsync();
    }

    private async Task EsconderModalEliminar()
    {
        await ModalEliminar.HideAsync();
    }

    private async Task Eliminar()
    {
        var eliminado = await EstudiantesService.Eliminar(Estudiante.EstudianteId);

        if (eliminado)
        {
            await EsconderModalEliminar();
            toastService.ShowSuccess("Se ha eliminado correctamente");
            navigationManager.NavigateTo("/Estudiante/Index");
        }
        else
        {
            toastService.ShowError("Ha ocurrido un error inesperado, vuelva intentarlo más tarde.");
        }
    }
}