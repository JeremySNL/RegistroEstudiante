@page "/Estudiante/Index"

@inject EstudiantesService estudiantesService
@inject NavigationManager navigationManager

<PageTitle>Registro de Estudiantes</PageTitle>
<div class="container">
    <div class="card shadow-lg">
        <div class="card-header d-flex justify-content-between align-center mb-4">
            <h5 class="card-title">Registro de Estudiantes</h5>
            <a href="/Estudiante/Create" class="btn btn-primary"> <span class="bi-plus-square mt-3"></span> Crear</a>
        </div>
    

        <div class="card-body">
            @*labels*@
            <div class="row">
                @*Filtra por*@
                <div class="col-3">
                    <label class="col-form-label"><strong>Filtro</strong></label>
                </div>

                @*Valor Filtro*@
                <div class="col-4">
                    <label class="col-form-label"><strong>Búsqueda</strong></label>
                </div>
            </div>
        
            @*Inputs y botones*@
        
            <div class="row align-items-center">
                @*Filtro*@
                <div class="col-3">
                    <div class="input-group">
                        <InputSelect class="form-control" @bind-Value="Filtro">
                            <option value="" selected disabled hidden>Elija una opción</option>
                            <option value="Nombre">Nombre</option>
                            <option value="Email">Email</option>
                        </InputSelect>
                    </div>
                </div>

                @*Busqueda*@
                <div class="col-4">
                    <div class="input-group">
                        <input class="form-control" @bind="ValorFiltro" placeholder="Buscar..." />
                        <button type="button" class="btn btn-outline-primary bi bi-search" @onclick="Buscar"></button>
                    </div>
                </div>
            </div>
        
            <table class="table table-hover">
                <thead class="table  table-striped text-black">
                    <tr>
                        <th>Id</th>
                        <th>Nombre</th>
                        <th>Email</th>
                        <th>Edad</th>
                        <th>Opciones</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var estudiante in ListaEstudiantes)
                    {
                        <tr>
                            <td> @estudiante.EstudianteId</td>
                            <td> @estudiante.Nombres</td>
                            <td> @estudiante.Email</td>
                            <td> @estudiante.Edad</td>

                            <td class="text-center">
                                <a href="/Estudiante/Edit/@estudiante.EstudianteId" class="btn btn-outline-primary bi bi-pencil-square"></a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        
            <div class="card-footer space-between">
                <label>Cantidad: @ListaEstudiantes.Count()</label>
            </div>
        </div>
    </div>
</div>

@code{
    public List<Estudiantes> ListaEstudiantes { get; set; } = new List<Estudiantes>();
    public string Filtro { get; set; } = string.Empty;
    public string ValorFiltro { get; set; } = string.Empty;

    protected override async Task OnInitializedAsync()
    {
        ListaEstudiantes = await estudiantesService.Listar(e => e.EstudianteId > 0);
    }

    public async Task Buscar()
    {
        if (Filtro != "")
        {
            if (Filtro == "Nombre")
            {
                ListaEstudiantes = await estudiantesService.Listar(e => e.Nombres.ToLower().Trim().Contains(ValorFiltro));
            }
            if (Filtro == "Email")
            {
                ListaEstudiantes = await estudiantesService.Listar(e => e.Email.ToLower().Trim().Contains(ValorFiltro));
            }
        }
        else
        {
            ListaEstudiantes = await estudiantesService.Listar(e => e.EstudianteId > 0);
        }
    }
}